form.form-horizontal(action="/projects/edit/" + project.id, method="POST")
  fieldset
    legend Edit project
    .control-group
      label.control-label(for="title") Title
      .controls
        input(class="input-xlarge", type="text", name="title", id="title", value=project.title)

    .control-group
      label.control-label(for="summary") Summary
      .controls
        textarea(class="input-xlarge", id="summary", name="summary", rows="3", maxlength="400")= project.summary

    .control-group
      label.control-label(for="description") Description
      .controls
        textarea(class="input-xlarge", id="description", name="description", rows="3", maxlength="400")= project.description

    .control-group
      label.control-label(for="link") Link
      .controls
        input(class="input-xlarge", type="text", name="link", id="link", value=project.link)

    .control-group
       label.control-label(for="tags") Tags - Comma separated (,)
       .controls
         input(class="input-xlarge", type="text", name="tags", id="tags", value=(project.tags) ? project.tags.join(',') : '')

    .control-group
       label.control-label(for="status") Status
       .controls
         select(class="input-xlarge", name="status", id="status")
          each status in statuses
            if(status == project.status)
              option(value=status,selected)= status
            else
              option(value=status)= status


    .form-actions
      button.btn.btn-primary(type="submit") Save project
      button.btn.cancel Cancel


